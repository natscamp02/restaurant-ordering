<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/style.css">

    <title>The Banana Leaf | Menu</title>
</head>

<body>
    <%- include('partials/header') %>

        <% if(message) { %>
            <span
                class="absolute top-4 right-4 z-50 bg-gray-200 p-4 rounded text-right animate-[alert_1.5s_ease-in-out_2_alternate_forwards]">
                <%= message %>
            </span>
            <% } %>

                <main class="min-h-screen">
                    <div class="container py-5">
                        <h1 class="text-4xl font-semibold mt-16 mb-6">Browse Our Choices</h1>

                        <p>Choose from our wide range of meals</p>

                        <div class="grid grid-cols-3 gap-4 mt-12">
                            <% items.forEach(function(item) { %>
                                <div class="px-4 py-4 rounded shadow-lg bg-gray-50 relative">
                                    <span
                                        class="absolute top-0 left-4 -translate-y-1/2 bg-green-100 text-green-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded mr-2 dark:bg-green-700 dark:text-green-300">
                                        <svg class="mr-1 w-3 h-3" fill="currentColor" viewBox="0 0 20 20"
                                            xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd"
                                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                        <%= item.time_to_prepare %>
                                    </span>

                                    <div class="flex justify-between items-center mb-2">
                                        <h3 class="text-xl font-semibold">
                                            <%= item.dish %>
                                        </h3>

                                        <span class="text-green-800 text-3xl font-bold">$<%= item.price %></span>
                                    </div>

                                    <p class="mb-4 text-gray-700">
                                        <%= item.description %>
                                    </p>

                                    <a class="inline-block px-4 py-3 rounded bg-green-500 text-white"
                                        href="/orders/confirm/<%= item.id %>">Order
                                        Now</a>
                                </div>
                                <% }); %>
                        </div>
                    </div>
                </main>

                <%- include('partials/footer') %>

</body>

</html>